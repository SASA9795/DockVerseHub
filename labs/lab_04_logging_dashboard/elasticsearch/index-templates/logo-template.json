{
  "_comment": "File Location: labs/lab_04_logging_dashboard/elasticsearch/index-templates/logs-template.json",
  "index_patterns": ["logs-*", "app-logs-*", "system-logs-*"],
  "template": {
    "settings": {
      "number_of_shards": 1,
      "number_of_replicas": 0,
      "index": {
        "refresh_interval": "5s",
        "max_result_window": 50000,
        "codec": "best_compression"
      },
      "analysis": {
        "analyzer": {
          "log_analyzer": {
            "type": "custom",
            "tokenizer": "standard",
            "filter": ["lowercase", "stop"]
          }
        }
      }
    },
    "mappings": {
      "properties": {
        "@timestamp": {
          "type": "date",
          "format": "strict_date_optional_time||epoch_millis"
        },
        "level": {
          "type": "keyword"
        },
        "message": {
          "type": "text",
          "analyzer": "log_analyzer",
          "fields": {
            "keyword": {
              "type": "keyword",
              "ignore_above": 1024
            }
          }
        },
        "logger": {
          "type": "keyword"
        },
        "service": {
          "type": "keyword"
        },
        "host": {
          "properties": {
            "name": {
              "type": "keyword"
            },
            "ip": {
              "type": "ip"
            }
          }
        },
        "container": {
          "properties": {
            "id": {
              "type": "keyword"
            },
            "name": {
              "type": "keyword"
            },
            "image": {
              "type": "keyword"
            }
          }
        },
        "http": {
          "properties": {
            "method": {
              "type": "keyword"
            },
            "status_code": {
              "type": "short"
            },
            "response_time": {
              "type": "float"
            },
            "url": {
              "type": "text",
              "fields": {
                "keyword": {
                  "type": "keyword"
                }
              }
            },
            "user_agent": {
              "type": "text",
              "fields": {
                "keyword": {
                  "type": "keyword",
                  "ignore_above": 1024
                }
              }
            }
          }
        },
        "error": {
          "properties": {
            "type": {
              "type": "keyword"
            },
            "stack_trace": {
              "type": "text"
            }
          }
        },
        "tags": {
          "type": "keyword"
        },
        "environment": {
          "type": "keyword"
        }
      }
    }
  },
  "composed_of": [],
  "priority": 100,
  "version": 1,
  "meta": {
    "description": "Template for application and system logs",
    "created_by": "DockVerseHub Lab 04"
  }
}
